<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.HappyBeer" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/amber_500</item>
        <item name="colorPrimaryVariant">@color/amber_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/indigo_200</item>
        <item name="colorSecondaryVariant">@color/indigo_700</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="Theme.HappyBeer" parent="Base.Theme.HappyBeer" />

    <style name="FullScreenDialogStyle" parent="Theme.HappyBeer">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>